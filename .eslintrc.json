{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks",
    "eslint-plugin-import-helpers",
    "prettier"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^react$/",
          "module",
          ["parent", "sibling", "index"],
          "/./styles/"
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"],
        "custom": {
          "regex": "[A-Z].+",
          "match": true
        }
      }
    ],
    "prettier/prettier": ["error", { "semi": true }]
  }
}
